<layout >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:fitsSystemWindows="true"
    tools:context="com.phigital.ai.Utility.StoryViewActivity"
    tools:ignore="Overdraw">

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="35dp"
        android:theme="@style/AppTheme.WhiteAccent"
        android:layout_height="35dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />


    <ImageView
        android:id="@+id/play"
        android:visibility="gone"
        android:src="@drawable/ic_play"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/reverse" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/skip" />
    </LinearLayout>

    <jp.shts.android.storiesprogressview.StoriesProgressView
        android:layout_width="match_parent"
        android:id="@+id/stories"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_height="7dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/stories">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="35dp"
            android:layout_centerVertical="true"
            android:id="@+id/pic"
            android:src="@drawable/placeholder"
            android:layout_height="35dp" />

        <TextView
            android:text="Username"
            android:fontFamily="@font/roboto_medium"
            android:textColor="#fff"
            android:textSize="16sp"
            android:id="@+id/username"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/verify"
            android:src="@drawable/ic_verify"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_toEndOf="@+id/username"
            android:layout_height="16dp"
            app:tint="#fff"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageView
            android:id="@+id/more"
            android:src="@drawable/ic_more_horiz"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="#fff"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:id="@+id/r_seen"
        android:layout_margin="10dp"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/seen_number"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Views"
            android:layout_marginStart="4dp"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/views"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:id="@+id/message"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/story_btn_border_round"
            android:id="@+id/sendMessage"
            android:fontFamily="@font/roboto_regular"
            android:hint="Send a message"
            android:textColor="#fff"
            android:textSize="14sp"
            android:paddingStart="20dp"
            android:textColorHint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,TextFields"
            android:importantForAutofill="no" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:padding="9dp"
            android:src="@drawable/ic_sender"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription,HardcodedText"
            app:tint="#fff" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
</layout>